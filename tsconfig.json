{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-when"],
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
}
